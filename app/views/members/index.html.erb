<h1>Listing members</h1>

<table>
  <tr>   
    <th>Last</th> 
    <th>First</th>
    <th>Title</th>
    <th>Company</th>
    <th>Email</th> 
    <th>Gender</th>
  </tr>
     
  
  <% @members.each do |member| %>   
   
     <tr class="<%= cycle('list-line-odd', 'list-line-even')%>"> 
    
      <td><%=link_to( h(member.last), member ) %></td>  
      <td><%=link_to( h(member.first), member ) %></td>  
    
      <td><%=h member.job_title.title %></td>
      <td><%=h member.company %></td>
      <td><%=h member.email %></td>   
      <td><%=h member.gender %></td>  
    
       <%#= link_to 'Show', member %> 
      <td><%= link_to 'Add Comment', member %></td>
      <td><%= link_to 'Edit', edit_member_path(member) %></td>
      <td><%= link_to 'Destroy', member, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>     
            
  
  <% end %>  
</table>

<br />

<%= link_to 'New member', new_member_path %>